@{
    ViewBag.Title = "Index";
}
<div id="container">
    <span class="glyphicon glyphicon-chevron-up" onclick="changeChevron()"></span>
<table class="table-bordered">
    <thead>
        <tr>
            <th>Number @Html.ActionLink(" ", "OrderTasks", "Home", new { prop = "Id" }, new { @class= "glyphicon glyphicon-chevron-down", @onclick = "Click()" })</th>
            <th>Userid @Html.ActionLink(" ", "OrderTasks", "Home", new { prop = "UserId" }, new { @class = "glyphicon glyphicon-chevron-down" })</th>
            <th>Description @Html.ActionLink(" ", "OrderTasks", "Home", new { prop = "Description" }, new { @class = "glyphicon glyphicon-chevron-down" })</th>
            <th>Data @Html.ActionLink(" ", "OrderTasks", "Home", new { prop = "Data" }, new { @class = "glyphicon glyphicon-chevron-down" })</th>
            <th>Priority @Html.ActionLink(" ", "OrderTasks", "Home", new { prop = "Priority" }, new { @class = "glyphicon glyphicon-chevron-down" })</th>
            <th>Completed @Html.ActionLink(" ", "OrderTasks", "Home", new { prop = "IsCompleted" }, new { @class = "glyphicon glyphicon-chevron-down" })</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in ViewBag.Tasks)
        {
            <tr>
                <td>@t.Id</td>
                <td>@t.UserId</td>
                <td>@t.Description</td>
                <td>@t.Data</td>
                <td>@t.Priority</td>
                @if (t.IsComplete)
                {
                    <td><input type="checkbox" checked="checked" onchange="TaskStatusChanged()"></td>
                }
                else
                {
                    <td><input type="checkbox" onchange="TaskStatusChanged()" /></td>
                }
            </tr>
        }
    </tbody>
</table>
@using (Html.BeginForm("AddTask", "Home", FormMethod.Post))
{
    @Html.TextBox("description", "", new { @type = "text", @placeholder="¬ведите задание" })
    @Html.TextBox("data", "", new { @type = "date", @placeholder = "¬ведите дату" })
    @Html.TextBox("priority", "", new { @type = "number", @placeholder = "¬ведите приоритет" })
    <input type="submit">
}
    @using (Html.BeginForm("LogInUser", "Auth", FormMethod.Post))
    {
        @Html.TextBox("login","", new { @type = "text", @placeholder="введите логин"})
        @Html.TextBox("password", "", new { @type = "text", @placeholder = "введите пароль" })
        <input type="submit">
    }
</div>