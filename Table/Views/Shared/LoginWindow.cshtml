<div class="modal fade" id="login_modal" tabindex="-1" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Вход</h4>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("LogInUser", "Auth", FormMethod.Post))
            {
                    <p>Введите логин:&nbsp; @Html.TextBox("login", "", new { @type = "text", @placeholder = "введите логин" })</p>
                    <p>Введите пароль: @Html.TextBox("password", "", new { @type = "password", @placeholder = "введите пароль" })</p>
                    <p>
                        <input type="submit" value="Войти" class="btn btn-default">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
                    </p>
                }
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>