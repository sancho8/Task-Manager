<div class="modal fade" id="myModal" tabindex="-1" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Регистрация</h4>
            </div>
            @using (Html.BeginForm("RegisterUser", "Auth", FormMethod.Post, new { }))
            {
                <div class="modal-body row" style="text-align:center">
                    <div>Введите логин:&nbsp;
                    @Html.TextBox("login", "", new { @type = "text", @placeholder = "введите логин", @id="RegLogin" })</div>
                    <div>Введите пароль:
                    @Html.TextBox("password", "", new { @type = "password", @placeholder = "Введите пароль", @id="RegPassword"})</div>
                    <div>Подтвердите пароль:
                    @Html.TextBox("confirmPassword", "", new { @type = "password", @placeholder = "Подтвердите пароль", @id="RegConfirmPassword"})</div>
                    <div>Введите почту:&nbsp;
                    @Html.TextBox("email", "", new { @type = "email", @placeholder = "введите email", @id="RegEmail" })</div>
                    <div>Получать рассылку задач на почту
                    @Html.CheckBox("needDelivery", new { @checked = "checked" })</div>
                    <div id="RegError"></div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary" onclick="return ValidateRegistrationForm()">Регистрация</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
                </div>
            }
        </div>
    </div>
</div>